<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="478dp"
        android:layout_height="784dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/randomdude"
                android:layout_width="398dp"
                android:layout_height="395dp"
                app:srcCompat="@drawable/randomdude" />

            <EditText
                android:id="@+id/et_firedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fired Person's Name" />

            <EditText
                android:id="@+id/et_firedLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fired Person's Last Name" />

            <EditText
                android:id="@+id/et_firedReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Fired Person's Reason" />

            <Button
                android:id="@+id/btnFire"
                android:text="Fire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>